<% provide :title, t("sessions.login") %>
<div class="row" id="panel-login">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default panel-primary">
      <div class="panel-heading">
        <%= t "sessions.login" %>
      </div>
      <div class="panel-body">
        <%= form_for :session, url: login_path do |f| %>
            <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
          <%= f.label :password %>
          <%= link_to t("sessions.forgot_password"), new_password_reset_path %>
          <%= f.password_field :password, class: "form-control" %>
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t "sessions.remember_me" %></span>
          <% end %>
          <%= f.submit t("sessions.login"), class: "btn btn-primary" %>
        <% end %>
        <p> <%= t "sessions.new_account" %> <%= link_to t("button.signup"), signup_path %></p>
      </div>
    </div>

  </div>
</div>
