<% provide :title, t("sessions.login") %>
<h1> <%= t "sessions.login" %> </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form_control" %>
      <%= f.label :password %>
      <%= link_to t("sessions.forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form_control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "sessions.remember_me" %></span>
      <% end %>
      <%= f.submit t("sessions.login"), class: "btn btn-primary" %>
    <% end %>
    <p> <%= t "sessions.login" %> <%= link_to t("button.signup"), signup_path %></p>
  </div>
</div>
