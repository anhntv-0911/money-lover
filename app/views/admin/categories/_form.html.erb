<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :parent_id %>
  <%= f.select :parent_id, options_for_select(category_options(@categories), selected: @category.parent_id), {include_blank: t("option.root")} %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <%= link_to t("button.delete"), admin_category_path(@category), class: "btn btn-danger", method: :delete, data: { confirm: t("alert.confirm_del") } %>
  <%= link_to t("button.back"), :back, class: "btn btn-default" %>
<% end %>
