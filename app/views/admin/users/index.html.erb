<div class="col-md-12">
  <div class="action mb-0">
    <%= link_to t("button.new"), new_admin_user_path, class: "btn btn-info" %>
  </div>
</div>
<div class="col-md-12">
  <div class="panel panel-primary mt-20">
    <div class="panel-heading">
      <%= t "table.title.users" %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t "table.head.id" %></th>
              <th><%= t "table.head.name" %></th>
              <th><%= t "table.head.username" %></th>
              <th><%= t "table.head.email" %></th>
              <th><%= t "table.head.phone" %></th>
              <th><%= t "table.head.address" %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
      </div>
      <%= paginate @users, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
